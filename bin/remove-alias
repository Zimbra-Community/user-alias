WHO=`whoami`
if [ $WHO != "zimbra" ]
then
echo
echo "Execute this scipt as user zimbra (\"su - zimbra\")"
echo
exit 1
fi

if [ $# -ne 2 ]
then
echo ""
echo "Required parameter missing"
echo ""
exit 1
fi

/opt/zimbra/bin/zmprov -l raa $1 $2
echo "end of command"

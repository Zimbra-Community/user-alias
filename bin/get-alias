WHO=`whoami`
if [ $WHO != "zimbra" ]
then
echo
echo "Execute this scipt as user zimbra (\"su - zimbra\")"
echo
exit 1
fi

if [ $# -ne 1 ] && [ $# -ne 2 ]
then
echo ""
echo "parameter: account missing"
exit 1
fi


# show a list of alias for an accounts for auto-completion (or something else)

printf '%s\n' $(/opt/zimbra/bin/zmprov ga $1 zimbraMailAlias | grep zimbraMailAlias | awk '{print $2}') | paste -sd ','
